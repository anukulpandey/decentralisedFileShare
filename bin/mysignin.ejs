<html>
  <title>SIGN IN</title>
  <body>
    <style>
      form {
        margin: 100px;
      }
      .input-field {
        position: relative;
        width: 250px;
        height: 44px;
        line-height: 44px;
      }
      label {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        color: #d3d3d3;
        transition: 0.2s all;
        cursor: text;
      }
      input {
        width: 100%;
        border: 0;
        outline: 0;
        padding: 0.5rem 0;
        border-bottom: 2px solid #d3d3d3;
        box-shadow: none;
        color: #111;
      }
      input:invalid {
        outline: 0;
      }
      input:focus,
      input:valid {
        border-color: #8a0dff;
      }
      input:focus ~ label,
      input:valid ~ label {
        font-size: 14px;
        top: -24px;
        color: #8a0dff;
      }
      .container{
          width:100%;
          height:100%;
          display: flex;
          margin: 0px;
          
      }
      body{
        margin: 0px;
          
      }
      .left{
          width: 80%;
          display: flex;
         align-items: center;
         justify-content: center;
      }
      .right{
          width: 20%;
         background-color: #8a0dff;
         
      }
      .btn{
    margin-top: 5px;     
    padding: 9px 92px;
    border: 0px;
    font-size: 14px;
    background-color: #8a0dff;
    color:#ffff;
    font-family: 'Times New Roman', Times, serif;
      }
      nav ul li a{
        text-decoration: none;
    color: white;
    padding: 15px 10px;
    font-size: 18;
      }
      nav ul {
        list-style-type: none;
        display: flex;
      }
    </style>

<div class="container">
    <div class="left">
    <form action="/signin" method="post">
        <div class="input-field">
          <input type="text" id="username" name="username" required />
          <label for="username">Username:</label>
        </div>
        <div class="input-field">
          <input type="password" id="password" name="password" required />
          <label for="password">Password:</label>
        </div>
        <button type="submit" class="btn">Submit </button>
    </form>
